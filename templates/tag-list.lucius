@shadow: 6px 6px 9px #CCC;

.shadowed {
    -moz-box-shadow: #{shadow};
    -webkit-box-shadow: #{shadow};
    box-shadow: #{shadow};
}

div.sidebar-tag-list {
    background-color: white;
    overflow: hidden;
    padding: 20px;
    margin-bottom: 20px;
    font-family: 'Helvetica Neue', Helvetica, sans-serif;
    .tag {
	background-color: #EEE;
	padding: 2px;
	line-height: 2.0;
	white-space: nowrap;

	a {
	    color: black;
	}

	a:hover {
	    color: #444;
	}
    }
}